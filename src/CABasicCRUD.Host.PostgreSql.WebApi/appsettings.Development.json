{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Information"
        }
    },
    "Serilog": {
        "Using": [
            "Serilog.Sinks.Console",
            "Serilog.Sinks.File",
            "Serilog.Sinks.OpenTelemetry"
        ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning",
                "Microsoft.Hosting.Lifetime": "Information"
            }
        },
        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "File",
                "Args": {
                    "path": "./logs/log-.txt",
                    "rollingInterval": "Day",
                    "rollOnFileSizeLimit": true,
                    "retainedFileCountLimit": 30,
                    "formatter": "Serilog.Formatting.Json.JsonFormatter"
                }
            },
            {
                "Name": "OpenTelemetry",
                "Args": {
                    "ResourceAttributes": {
                        "service.name": "CABasicCRUD.Host.PostgreSql.WebApi"
                    }
                }
            }
        ],
        "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
    }
}
