@model CABasicCRUD.Presentation.WebMvc.Models.Posts.PostDetailsViewModel

@{
    ViewData["Title"] = "Post";
}

<article class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="card shadow-sm p-4 mb-1">

                @* Post *@
                <h1 class="mb-3">@Model.Title</h1>

                <p class="text-muted mb-4">
                    @Model.Content
                </p>

                <nav class="d-flex gap-3 border-top pt-3">
                    <a href="/posts/@Model.Id/edit" class="nav-link">
                        Edit
                    </a>
                    <a href="/posts" class="nav-link">
                        Back to posts
                    </a>
                </nav>

                @* Add comment *@
                <section class="mt-4">
                    <h6 class="mb-2">Add a comment</h6>

                    <form asp-controller="Posts" asp-action="CreateComment" asp-route-id="@Model.Id" method="post">
                        <div class="mb-3">
                            <textarea class="form-control" asp-for="NewComment.Body"
                                      placeholder="Write your comment..."></textarea>
                            <span asp-validation-for="NewComment.Body" class="text-danger small"></span>
                        </div>

                        <button class="btn btn-primary btn-sm" type="submit">
                            Submit
                        </button>
                    </form>
                </section>

                @* Comments *@
                <section class="mt-4">
                    <h4 class="mb-3">Comments (@Model.Comments.Count)</h4>

                    @if (!Model.Comments.Any())
                    {
                        <p class="text-muted">No comments yet.</p>
                    }
                    else
                    {
                        @foreach (var comment in Model.Comments)
                        {
                            <div class="border-bottom pb-2 mb-3">
                                <p class="mb-1">@comment.Body</p>
                                <small class="text-muted">
                                    @comment.CreatedAt.ToString("g")
                                </small>
                            </div>
                        }
                    }
                </section>
            </div>
        </div>
    </div>
</article>