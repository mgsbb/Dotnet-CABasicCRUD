@using CABasicCRUD.Domain.Posts
@model CABasicCRUD.Presentation.WebMvc.Models.Posts.PostListViewModel;
@{
    ViewData["Title"] = "Posts";
}

<section class="container py-5">
    @* title and button *@
    <div class="d-flex align-items-center mb-4">
        <h1 class="mb-3">Posts</h1>

        <nav class="d-flex justify-content-center gap-3">
            <a href="/Posts/Create" class="btn btn-primary btn-sm px-3 mx-3">
                Create new
            </a>
        </nav>
    </div>

    @* filter form *@
    <form method="get" class="mb-3">
        <div class="d-flex align-items-center gap-2 mb-3">
            <div class="col-6">
                <input asp-for="SearchTerm" placeholder="Search posts..." class="form-control"/>
            </div>

            <div class="col">
                <select asp-for="OrderBy" asp-items="Html.GetEnumSelectList<PostOrderBy>()"
                        class="form-select" onchange="this.form.submit()"></select>
            </div>

            <div class="col">
                <select asp-for="SortDirection" asp-items="Html.GetEnumSelectList<SortDirection>()"
                        class="form-select" onchange="this.form.submit()"></select>
            </div>

            <select asp-for="PageSize" class="form-select col" onchange="this.form.submit()">
                <option value="10">10/page</option>
                <option value="20">20/page</option>
                <option value="30">30/page</option>
            </select>

            <div class="col-auto">
                <input asp-for="Page" value="1" type="hidden" class="form-control" />

                <input asp-for="PageSize" type="hidden" class="form-control" />

                <button type="submit" class="btn btn-outline-primary">Filter</button>
            </div>

            
        </div>

       
    </form>

    @* list of posts *@
    <ul class="list-group shadow-sm">
        @foreach (var post in Model.Posts)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <a href="/posts/@post.Id" class="text-decoration-none fw-semibold">
                    @post.Title
                </a>

                <div class="d-flex gap-3">
                    <a href="/posts/@post.Id/edit" class="nav-link">
                        Edit
                    </a>
                    <a href="/posts/@post.Id/delete" class="nav-link text-danger">
                        Delete
                    </a>
                </div>
            </li>
        }
    </ul>
</section>