<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body class="flex flex-col w-full min-h-screen">
    <header class="w-full bg-black text-gray-300 px-10 py-4">
        <nav class="flex justify-between items-center">
            <a href="/" class=" ">Home</a>
            <div>
                <a href="/Auth/Login" class="nav-link px-3">Login</a>
                <a href="/Auth/Register" class="nav-link px-3">Register</a>
            </div>
        </nav>
    </header>

    <main class="grow">
        @RenderBody()
    </main>

    <footer class="w-full bg-black text-gray-300 px-10 py-4 flex justify-center items-center">
        <small class="">&copy; @DateTime.UtcNow.Year</small>
    </footer>
</body>

</html>